T.c -> O(n) , S.c -> O(n)

class Solution {
public:
    bool isValid(string s) {
        stack <char> st;
        for(auto it : s){
            if(it == '(' || it == '{' || it == '[') st.push(it);
            else{
                if(st.empty()) return 0;
                if(it == ')' && st.top() != '(' || it == '}' && st.top() != '{' || it == ']' && st.top() != '[')
                    return 0;
                st.pop();
            }
        }

        return st.empty();
    }
};
