class Solution {
public:
    string addBinary(string a, string b) {
        string ans;
        int i = a.size()-1, j = b.size()-1, carry = 0;
        while(i >= 0 || j >= 0){
            int num = (i >= 0 ? a[i]-'0' : 0) + (j >= 0 ? b[j]-'0' : 0) + carry;
            if(num == 0 || num == 1){
                carry = 0;ans += to_string(num);
            }else if(num == 2){
                carry = 1;ans += '0';
            }else{
                carry = 1;ans += '1';
            }
            i--;j--;
        }

        if(carry) ans += '1';
        reverse(ans.begin(),ans.end());
        return ans;
    }
};
